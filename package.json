{
	"name": "melvin",
	"private": true,
	"packageManager": "pnpm@8.6.5",
	"scripts": {
		"prepare": "husky install",
		"build:1-generate": "prisma generate",
		"build:2-build": "next build",
		"build": "run-s build:*",
		"build-analyze": "cross-env ANALYZE=true pnpm build",
		"build-ci": "run-s build:* prisma:push",
		"db:nuke": "docker-compose down --volumes --remove-orphans",
		"db:reset": "run-s db:nuke db:up prisma:migrate",
		"db:up": "docker-compose up -d",
		"db:down": "docker-compose down",
		"db:push": "prisma db push",
		"db:seed": "prisma db seed",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev --skip-seed",
		"dev": "next dev",
		"dx": "run-s db:up dev",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"lint:ts": "tsc --pretty --noEmit",
		"test:unit": "jest",
		"test:e2e": "playwright test",
		"test": "run-s test:*",
		"pw:codegen": "playwright codegen http://localhost:3000 --load-storage=e2e/setup/storage-state.json",
		"postinstall": "prisma generate"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
