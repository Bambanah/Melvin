{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["dom", "dom.iterable", "es2019"],
		"types": ["cypress"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@pages/*": ["src/pages/*"],
			"@atoms/*": ["src/atoms/*"],
			"@molecules/*": ["src/molecules/*"],
			"@organisms/*": ["src/organisms/*"],
			"@layouts/*": ["src/layouts/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@schema/*": ["src/schema/*"],
			"@styles/*": ["src/styles/*"],
			"@context/*": ["src/context/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		".eslintrc.js",
		"prisma/seed.ts"
	],
	"exclude": ["node_modules"]
}
